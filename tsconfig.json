{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./lib",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "exclude": ["./node_modules"],
  "include": ["lib/**/*.ts"]
}
