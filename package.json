{
  "name": "@aserto/aserto-node",
  "description": "Authorize access to an endpoint",
  "version": "0.31.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Aserto",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc --build",
    "check": "tsc --noEmit",
    "detect-unused-exports": "scripts/detect-unused-exports.sh",
    "dev:checks": "yarn lint --fix && yarn tsc && yarn detect-unused-exports && yarn test",
    "format": "prettier --write lib",
    "lint": "eslint lib --max-warnings=0",
    "prepublishOnly": "NODE_ENV=production yarn build",
    "push": "scripts/publish.sh",
    "release": "scripts/release.sh",
    "test": "jest test --coverage --verbose"
  },
  "files": [
    "lib",
    "dist"
  ],
  "imports": {
    "@lib": "./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aserto-dev/aserto-node.git"
  },
  "keywords": [
    "express",
    "topaz",
    "jwt",
    "authorization",
    "aserto",
    "authz"
  ],
  "bugs": {
    "url": "https://github.com/aserto-dev/aserto-node/issues"
  },
  "homepage": "https://github.com/aserto-dev/aserto-node#readme",
  "dependencies": {
    "@aserto/node-authorizer": "^v0.20.7",
    "@aserto/node-directory": "^0.31.1",
    "@bufbuild/protobuf": "^1.4.2",
    "@connectrpc/connect": "^1.1.3",
    "@connectrpc/connect-node": "^1.1.3",
    "@grpc/grpc-js": "1.8.21",
    "express": "^4.18.2",
    "google-protobuf": "^3.21.2",
    "jwt-decode": "^3.1.2"
  },
  "devDependencies": {
    "@aserto/ts-linting-configs": "^2.5.0",
    "@babel/core": "^7.23.3",
    "@types/express": "^4.17.14",
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^29.1.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-typescript-sort-keys": "^3.1.0",
    "jest": "^29.7.0",
    "njwt": "^2.0.0",
    "node-mocks-http": "^1.13.0",
    "prettier": "^2.5.1",
    "ts-jest": "^29.0.3",
    "ts-prune": "^0.10.3",
    "typescript": "^4.5.4"
  }
}
